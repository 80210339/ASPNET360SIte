@page
@model ASPNET360SIte.Pages.Rooms.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.ID" />
            <div class="form-group">
                <label asp-for="Room.RoomLabel" class="control-label"></label>
                <input asp-for="Room.RoomLabel" class="form-control" />
                <span asp-validation-for="Room.RoomLabel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.MainImagePath" class="control-label"></label>
                <input asp-for="Room.MainImagePath" class="form-control" />
                <span asp-validation-for="Room.MainImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.MainImage" class="control-label"></label>
                <input asp-for="Room.MainImage" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="Room.MainImage" class="text-danger"></span>
            </div>
            @if (Model.Room.MainImagePath != null)
            {
                <div class="form-group">
                    Existing Image:
                    <img src="/uploads/@Model.Room.MainImagePath" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
